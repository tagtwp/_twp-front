{
	"name": "twp-front",
	"version": "1.0.0",
	"description": "twp-front",
	"main": "tailwind/tailwind.config.js",
	"scripts": {
		"development:tailwind:frontend": "npx tailwindcss --postcss -i ./tailwind/tailwind.css -c ./tailwind/tailwind.config.js -o ./theme/assets/css/style.css",
		"development:esbuild": "npx esbuild ./javascript/script.js --target=esnext --bundle --outdir=./theme/assets/js --out-extension:.js=.min.js",
		"development": "run-p \"development:**\"",
		"dev": "npm run development",
		"watch:tailwind:frontend": "npm run development:tailwind:frontend -- --watch",
		"watch:esbuild": "npm run development:esbuild -- --watch",
		"watch": "run-p \"watch:**\"",
		"lint:eslint": "npx eslint theme/",
		"lint:prettier": "npx prettier --check .",
		"lint": "run-p \"lint:*\"",
		"lint-fix:eslint": "npx eslint theme/ --fix",
		"lint-fix:prettier": "npx prettier --write .",
		"lint-fix": "run-p \"lint-fix:*\""
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/tagtwp/twp-front.git"
	},
	"keywords": [
		"twp",
		"tailwind"
	],
		"author": "tagtwp.com",
		"license": "MIT",
		"bugs": {
		"url": "https://github.com/tagtwp/twp-front/issues"
	},
	"homepage": "https://github.com/tagtwp/twp-front#readme",
	"devDependencies": {
		"npm-run-all": "^4.1.5",
		"prettier": "^3.1.1",
		"prettier-plugin-tailwindcss": "^0.5.11",
		"tailwindcss": "3.4.0",
		"esbuild": "^0.19.10",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-php-markup": "^6.0.0",
		"eslint-plugin-tailwindcss": "^3.13.1",
		"postcss": "^8.4.33",
		"postcss-import-ext-glob": "^2.1.1",
		"@angular-eslint/template-parser": "^17.1.1"
	}
}
